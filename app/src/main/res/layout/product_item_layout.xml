<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_half_dp"
    android:layout_marginBottom="@dimen/margin_five_dp"

    android:layout_marginTop="@dimen/margin_five_dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_trending"
        android:layout_width="@dimen/child_image_size"
        android:layout_height="@dimen/child_image_size"
        android:layout_centerHorizontal="true"

        android:src="@drawable/ic_mac_book" />

    <TextView
        android:id="@+id/tv_trending"
        android:layout_width="@dimen/child_image_size"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_trending"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"


        android:maxLines="2"
        android:text="13-inch Apple Mac book pro gvvgvgv"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trending"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_five_dp"

        android:layout_marginTop="@dimen/margin_five_dp"
        android:text="32 % in Progress"
        android:textSize="11sp" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"

        android:layout_width="@dimen/child_image_size"
        android:layout_height="@dimen/margin_five_dp"

        android:layout_below="@+id/tv_progress"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="60"
        android:progressBackgroundTint="#d7d4d4" />

    <ImageView

        android:layout_width="@dimen/add_to_cart_icon_size"
        android:layout_height="@dimen/add_to_cart_icon_size"
        android:layout_below="@+id/tv_trending"
        android:layout_marginBottom="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_toRightOf="@+id/tv_progress"
        android:src="@drawable/ic_add_card" />


</RelativeLayout>